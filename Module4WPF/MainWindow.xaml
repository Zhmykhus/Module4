<Window x:Class="Module4WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Module4WPF"
        mc:Ignorable="d"
        Title="Валидация номера телефона" Height="350" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Номер телефона:" FontSize="16"/>
        <TextBox x:Name="PhoneNumberTextBox" FontSize="16" Margin="0,5,0,10"/>

        <Button Content="Получить данные" Click="GetDataButton_Click" FontSize="16"/>

        <TextBlock Text="Результаты:" FontSize="16" Margin="0,20,0,5"/>
        <TextBlock x:Name="ResultTextBlock" FontSize="16" TextWrapping="Wrap"/>

        <Button Content="Отправить результат теста" Click="SendResultButton_Click" FontSize="16" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
